---
import '../css/style.css'

interface Frontmatter {
  author?: string
  date?: string
  description?: string
  file: string
  section?: string
  title?: string
  url: string
}
interface Heading {
  depth: number
  slug: string
  text: string
}
interface Page {
  url: URL
}
interface Props {
  frontmatter: Frontmatter
  page: Page
  section?: string
  title?: string
}
export interface URL {
  next: string
  prev: string
}

let {frontmatter = {}, title = ""} = Astro.props
title = frontmatter.title ? frontmatter.title : title
